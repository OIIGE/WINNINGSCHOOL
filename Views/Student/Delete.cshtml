@model WINNINGSCHOOL.Models.StudentViewModel

@{
    ViewData["Title"] = "Delete Student";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<h3>@ViewData["Title"]</h3>
<hr />

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger">
        <strong> Error!</strong> @errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form action="Delete" method="post" autocomplete="off">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label"> First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label"> Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label"> Date of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label"> State of Origin</label>
        <input type="text" class="form-control" asp-for="StateOfOrigin" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label"> Address</label>
        <input type="text" class="form-control" asp-for="Address" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label"> Parent/Guardian Name</label>
        <input type="text" class="form-control" asp-for="ParentFullName" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label"> Phone Number</label>
        <input type="text" class="form-control" asp-for="ParentPhoneNumber" readonly />
     </div>


    <div class="mb-3">
        <label class="form-label"> Parent Address</label>
        <input type="text" class="form-control" asp-for="ParentAddress" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label"> E-Mail</label>
        <input type="email" class="form-control" asp-for="GuidanceEmail" readonly />
    </div>

    <div class=" mb-3">
        <label class="form-label"> Enrollment Date</label>
        <input type="date" class="form-control" asp-for="EnrollmentDate" readonly />
    </div>

        <div class="d-grid">
        <button type="submit" class="btn btn-danger" onclick="return confirm ('Are you sure to delete student : @Model.FullName')">Delete</button>
    </div>
</form>
